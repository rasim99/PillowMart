<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- boostrap cdn  -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css
    ">
    <!-- font awesome link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- main css link  -->
    <link rel="stylesheet" href="~/assets/css/main.css">
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <div class="container">
            <div class="row jspacebetween">
                <div class="col-4 col-xxl-4 col-xl-4 col-lg-4">
                    <a href="index.html">
                        <img src="~/assets/images/logo.png" alt="">
                    </a>
                </div>

                <div class="col-4 col-xxl-4 col-xl-4">
                    <ul class="nav__list">
                        <li><a asp-controller="Home" asp-action="Index">Əsas</a></li>
                        <li><a asp-controller="About" asp-action="Index">Haqqımızda</a></li>
                        <li><a asp-controller="Product" asp-action="Index">Məhsullar</a></li>
                        <li><a asp-controller="Contact" asp-action="Index">Əlaqə</a></li>
                    </ul>
                </div>

                <div class="col-4 col-xxl-4 col-xl-4 ">
                    <ul class="nav__right">
                        <li>

                            <a href="#">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </a>

                        </li>
                        <li>
                            <a href="#">
                                <i class="fa-solid fa-cart-shopping"></i>
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
            <div class="accordion__menu mb-4  show__lg--less">
                <div class="accordion" id="accordionExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">

                                <span style="margin-left: 30px; color: rgb(33, 200, 200); font-size: 29px;"> &#9779;</span>

                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse show"
                             data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <ul class="accordion__links">
                                    <li><a asp-controller="Home" asp-action="Index">Əsas</a></li>
                                    <li><a asp-controller="About" asp-action="Index">Haqqımızda</a></li>
                                    <li><a asp-controller="Product" asp-action="Index">Məhsullar</a></li>
                                    <li><a asp-controller="Contact" asp-action="Index">Əlaqə</a></li>

                                        <a href="#">
                                            <i class="fa-solid fa-magnifying-glass"></i>
                                        </a>

                                    </li>

                                    <li>
                                        <a href="#">
                                            <i class="fa-solid fa-cart-shopping"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>
        
    <footer>
        <div class="footer__iner">
            <div class="container">
                <div class="row">
                    <div class="col-4 col-xxl-4 col-xl-4 col-lg-6 col-md-12 col-sm-12 col-xs-12">
                        <a href="index.html">
                            <img src="~/assets/images/logo.png" alt="">
                        </a>
                    </div>

                    <div class="col-4 col-xxl-4 col-xl-4 col-lg-6 col-md-12 col-sm-12 col-xs-12">
                        <ul class="footer__list">
                            <li><a href="#">Əsas</a></li>
                            <li><a href="#">Haqqımızda</a></li>
                            <li><a href="#">Məhsullar</a></li>
                            <li><a href="#">Əlaqə</a></li>
                        </ul>
                    </div>
                    <div class=" col-4 col-xxl-4 col-xl-4 col-lg-6 col-md-12 col-sm-12 col-xs-12">
                        <div class="footer__socials">
                            <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                            <a href="#"><i class="fa-brands fa-instagram"></i></a>
                            <a href="#"><i class="fa-brands fa-linkedin-in"></i></a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="copyright">
            <div class="container">
                <h2>Copyright ©2025 Bütün hüquqlar qorunur  </h2>
            </div>
        </div>
    </footer>

    <!-- boostrap js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js
     "></script>

    @RenderSection("Scripts", false)
</body>
</html>